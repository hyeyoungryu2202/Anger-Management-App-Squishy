<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angieryu2202.myapplication.Main2Activity">

    <TextView
        android:id="@+id/survey_result"
        android:layout_width="327dp"
        android:layout_height="164dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text='"당신은 신중형(Conscientiousness Type)이군요! 당신은 완벽함을 추구하며 혼자만의 시간을 중요시하는 성격의 소유자군요."'
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="serif"
        android:text="CHECK YOUR ANGER"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/survey_result"
        app:layout_constraintVertical_bias="0.479" />
</android.support.constraint.ConstraintLayout>
